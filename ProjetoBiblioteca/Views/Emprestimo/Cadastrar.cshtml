@model EmprestimoModel  
@{
    ViewData["title"] = "Cadastro Empréstimo";
}
<div class="container p-5">
    <div class="mb-5 text-center">
        <h1>Cadastro de Empréstimo</h1>
    </div>
    <form method="post" asp-controller="Emprestimo" asp-action="Cadastrar">
        <div class="mb-3">
            <label for="Recebedor">Recebedor:</label>
            <input type="text" class="form-control" asp-for="Recebedor" id="Recebedor"/>
            <span class="text-danger" asp-validation-for="Recebedor"></span>
        </div>
        <div class="mb-3">
            <label for="Fornecedor">Fornecedor:</label>
            <input type="text" class="form-control" asp-for="Fornecedor" id="Fornecedor" />
            <span class="text-danger" asp-validation-for="Fornecedor"></span>
        </div>
        <div class="mb-3">
            <label for="Livro">Livro:</label>
            <input type="text" class="form-control" asp-for="LivroEmprestado" id="Livro" />
            <span class="text-danger" asp-validation-for="LivroEmprestado"></span>
        </div>
        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-success w-50">Cadastrar</button>
            <a class="btn btn-primary w-50" asp-controller="Emprestimo" asp-action="Index">Voltar</a>
        </div>
    </form>
</div>