@model IEnumerable<EmprestimoModel>
<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Empréstimos</h1>
        <a class="btn btn-success mx-2" asp-area="" asp-controller="Emprestimo" asp-action="Cadastrar">Novo empréstimo</a>
    </div>
    <div>
        <table class="table table-dark table-hover">
            <thead>
                <th scope="col">Recebedor</th>
                <th scope="col">Fornecedor</th>
                <th scope="col">Livro</th>
                <th scope="col">Ultima atualização</th>
                <th scope="col">Ações</th>
            </thead>
            <tbody>
                @if(Model != null)
                {
                    @foreach(var emprestimo in Model)
                    {
                        <tr>
                            <td>@emprestimo.Recebedor</td>
                            <td>@emprestimo.Fornecedor</td>
                            <td>@emprestimo.LivroEmprestado</td>
                            <td>@emprestimo.DataEmprestimo</td>
                            <td>
                                <a class="btn btn-warning mx-2" asp-controller="Emprestimo" asp-action="Editar" asp-route-id="@emprestimo.Id">Editar</a>
                                <a class="btn btn-danger mx-2" asp-controller="Emprestimo" asp-action="Excluir" asp-route-id="@emprestimo.Id">Excluir</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>